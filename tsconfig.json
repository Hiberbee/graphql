{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "baseUrl": "",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["dom", "ES6"],
    "typeRoots": ["node_modules/@types"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitThis": true,
    "noImplicitAny": false,
    "noEmit": false,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES6",
    "rootDirs": ["src"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "templates", "build", "src/main/graphql"]
}
