{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": "",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "ES6"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": false,
    "typeRoots": [
      "node_modules/@types",
      "src/types/typescript"
    ],
    "noImplicitAny": false,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES2015",
    "removeComments": true,
    "rootDirs": [
      "src/main",
      "src/types"
    ]
  },
  "files": [
    "src/types/typescript/graphql.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/*"
  ]
}
